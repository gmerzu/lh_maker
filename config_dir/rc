# template_name|@template_group = [extension|@template_name|@template_group]...

cpp = cpp cc c h
bash = sh
perl = pl
cmake = cmake
@cpp = @cpp
@shell = @bash @perl @cmake


# script variables

# make output in color
$color = 1

# always work interactively
$interactive = 1

# default path to template variables
$vars = ~/.lh_maker/vars

# process only these types while searching through the directories passed to the script
$types = @cpp, perl

# additional paths passed to PATH
$path = /bin:/usr/bin

